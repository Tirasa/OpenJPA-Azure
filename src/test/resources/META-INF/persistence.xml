<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  
  <persistence-unit name="jpasqlazurePersistenceUnit">
    <mapping-file>META-INF/orm.xml</mapping-file>
    <validation-mode>NONE</validation-mode>

    <properties>
      <!-- 
        A semicolon-separated list of directories or jar archives listed in classpath.
        Each directory and jar archive will be scanned for annotated JPA entities. 
      -->
      <property name="openjpa.MetaDataFactory" 
                value="jpa(Types=net.tirasa.jpasqlazure.beans.Person;net.tirasa.jpasqlazure.beans.PersonINT;net.tirasa.jpasqlazure.beans.PersonINT_PK;net.tirasa.jpasqlazure.beans.PersonBIN;net.tirasa.jpasqlazure.beans.PersonBIN_PK;net.tirasa.jpasqlazure.beans.PersonUID;net.tirasa.jpasqlazure.beans.PersonUID_PK;net.tirasa.jpasqlazure.beans.BusinessRole)"/>
    
      <property name="openjpa.jdbc.MappingDefaults" value="ForeignKeyDeleteAction=restrict, JoinForeignKeyDeleteAction=restrict"/>
      
      <property name="openjpa.jdbc.UpdateManager" value="org.apache.openjpa.jdbc.kernel.SQLAzureUpdateManager"/>
      <property name="openjpa.BrokerFactory" value="org.apache.openjpa.jdbc.kernel.SQLAzureBrokerFactory"/>
      <property name="openjpa.jdbc.SQLFactory" value="org.apache.openjpa.jdbc.sql.SQLAzureSQLFactory"/>
        
      <property name="openjpa.sqlazure.Federations" value="FED_1, FED_2, FED_3, FED_4, FED_5" />
        
      <property name="openjpa.sqlazure.FED_1.RangeMappingType" value="BIGINT" />
      <property name="openjpa.sqlazure.FED_1.Tables" value="Person,BusinessRole" />
      <property name="openjpa.sqlazure.FED_1.Person.RangeMappingName" value="id" />
      <property name="openjpa.sqlazure.FED_1.BusinessRole.RangeMappingName" value="id" />
        
      <property name="openjpa.sqlazure.FED_2.RangeMappingType" value="UNIQUEIDENTIFIER" />
      <property name="openjpa.sqlazure.FED_2.Tables" value="PersonUID" />
      <property name="openjpa.sqlazure.FED_2.PersonUID.RangeMappingName" value="code" />
        
      <property name="openjpa.sqlazure.FED_3.RangeMappingType" value="INT" />
      <property name="openjpa.sqlazure.FED_3.Tables" value="PersonINT" />
      <property name="openjpa.sqlazure.FED_3.PersonINT.RangeMappingName" value="code" />
        
      <property name="openjpa.sqlazure.FED_4.RangeMappingType" value="VERBINARY" />
      <property name="openjpa.sqlazure.FED_4.Tables" value="PersonBIN" />
      <property name="openjpa.sqlazure.FED_4.PersonBIN.RangeMappingName" value="code" />
    </properties>
  </persistence-unit>
  
  <!-- ==================================================================== -->
  <!-- Configuration for testing basic CRUD operations                      -->
  <!-- ==================================================================== -->
  <persistence-unit name="azure">    
    <class>org.apache.openjpa.azure.PObject</class>
    <class>org.apache.openjpa.azure.Person</class>
    <class>org.apache.openjpa.azure.Address</class>
    <class>org.apache.openjpa.azure.Country</class>
    <properties>
      <property name="openjpa.jdbc.UpdateManager" value="org.apache.openjpa.jdbc.kernel.SQLAzureUpdateManager"/>
      <property name="openjpa.BrokerFactory" value="org.apache.openjpa.jdbc.kernel.SQLAzureBrokerFactory"/>
      <property name="openjpa.jdbc.SQLFactory" value="org.apache.openjpa.jdbc.sql.SQLAzureSQLFactory"/>
        
      <property name="openjpa.ConnectionURL" 
                value="jdbc:sqlserver://tp1qraooo4.database.windows.net:1433;database=test;encrypt=true;hostNameInCertificate=*.database.windows.net;loginTimeout=30"/>
      <property name="openjpa.jdbc.DBDictionary" value="org.apache.openjpa.jdbc.sql.SQLAzureDictionary"/>
      <property name="openjpa.ConnectionDriverName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="openjpa.ConnectionUserName" value="${jpa.username}"/>
      <property name="openjpa.ConnectionPassword" value="${jpa.password}"/>
      
      <property name="openjpa.jdbc.MappingDefaults" value="ForeignKeyDeleteAction=restrict, JoinForeignKeyDeleteAction=restrict"/>
      
      <property name="openjpa.sqlazure.Federations" value="TEST_FED1,TEST_FED2"/>
      <property name="openjpa.sqlazure.TEST_FED1.RangeMappingType" value="BIGINT"/>
      <property name="openjpa.sqlazure.TEST_FED1.Tables" value="PObject"/>
      <property name="openjpa.sqlazure.TEST_FED1.PObject.RangeMappingName" value="id"/>
      <property name="openjpa.sqlazure.TEST_FED2.RangeMappingType" value="BIGINT"/>
      <property name="openjpa.sqlazure.TEST_FED2.Tables" value="PObject"/>
      <property name="openjpa.sqlazure.TEST_FED2.PObject.RangeMappingName" value="id"/>
        
      <property name="openjpa.RuntimeUnenhancedClasses" value="unsupported"/>
      <property name="openjpa.DynamicEnhancementAgent" value="false"/>
      
      <property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=TRACE, Tool=TRACE, SQL=TRACE"/>
    </properties>
  </persistence-unit>
</persistence>
